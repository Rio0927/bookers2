<% if @user.errors.any? %>
  <%= @user.errors.count %>件のエラーが発生しました
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @user, url:user_path do |f| %>

  <h4>Name</h4>
  <%= f.text_field :name %>

  <h4>image</h4>
  <%= f.file_field :profile_image, accept: "image/*" %>

  <h4>introduction</h4>
  <%= f.text_area :introduction %><br>

  <%= f.submit 'Update User', class: "btn btn-secondary" %>

<% end %>