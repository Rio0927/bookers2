<div class="container px-5 px-sm-0">
            <% if @book1.errors.any? %>
              <%= @book1.errors.count %>件のエラーが発生しました
              <ul>
                <% @book1.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            <% end %>

    <div class="row">
        <div class="col-md-3">

            <h1>User info</h1>
            <%= image_tag @user.get_profile_image(100,100) %>

            <table class="table">
              <tbody>
                <tr></tr>
                <tr>
                  <th><p>name</p></th> <th><%= @user.name %></th>
                </tr>
                <tr>
                  <th><p>introduction</p></th> <th><%= @user.introduction %></th>
                  <th></th>
                </tr>
              </tbody>
            </table>

            <%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary btn-lg btn-block" do%>
            <i class="fas fa-user-cog"></i>
            <% end %>

            <h1>New book</h1>

            <%= form_with model: @book1, url:'/books', method: :post do |f| %>

            <h3>Title</h3>
            <%= f.text_field :title %>

            <h3>Opinion</h3>
            <%= f.text_area :body %><br>

            <%= f.submit 'Create Book', class: "btn btn-success" %>
            <% end %>
        </div>

        <div class="col-md-8 offset-md-1">
            <h1>Books</h1>
            <table class="table table-hover table-inverse">
                <thead>
                    <tr>
                        <th></th>
                        <th>Title</th>
                        <th>Opinion</th>
                        <th colspan="3"></th>
                    </tr>
                </thead>
                <tbody>
                    <% @books.each do |book| %>
                    <tr>
                        <td>
                            <%= link_to user_path(book.user) do %>
                            <%= image_tag @user.get_profile_image(100,100) %>
                            <% end %>
                        </td>
                        <td>
                            <%= link_to book.title, book_path(book.id) %>
                        </td>
                        <td>
                            <%= book.body %>
                        </td>
                    </tr>
                    <% end %>
               </tbody>
            </table>
        </div>
    </div>
</div>






